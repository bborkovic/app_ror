<h1>Books#index</h1>


<% if( !flash[:notice].blank? )%>
	<div class='notice'>
		<%= flash[:notice]%>
	</div>
<% end%>


<table>
	<tr>
		<th>Book Name</th>
		<th>Description</th>
		<th>Actions</th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.name %></td>
			<td><%= book.description %></td>
			<td>
				<%= link_to("Show", book_path(book)) %>
				<%= link_to("Edit", edit_book_path(book)) %>
				<%= link_to("Delete", delete_book_path(book)) %>
			</td>
		</tr>
	<% end %>
</table>

<%= link_to("New Book", new_book_path , :class=>'action new') %>


