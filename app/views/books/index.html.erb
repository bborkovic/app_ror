<h1>List of Books</h1>

<table class="table">
	<tr>
		<th>Book Name</th>
		<th>Actions</th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td><%= link_to(book.name , book_path(book))%></td>
			<td>
				<%= link_to("Edit", edit_book_path(book)) %>
				<%= link_to("Delete", delete_book_path(book)) %>
			</td>
		</tr>
	<% end %>
</table>

<%= link_to("New Book", new_book_path , :class=>'btn btn-primary') %>


