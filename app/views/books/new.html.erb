<h2>New Book</h2>

<div class="books new">
	<%= form_for(@book, :url => books_path, :method => 'post') do |f|%>
		
		<div class="form-group">
			<%= f.label :publisher %>
			<%= f.collection_select(:publisher_id, Publisher.all, :id, :name, options = {:include_blank => "Select one"}, html_options = { :class => "form-control"}) %>
		</div>

		<div class="form-group">
			<%= f.label :author %>
			<%= f.select(:author_id, Author.all.map{ |author| [author.full_name, author.id] }, options = {:include_blank => "Select one"}, html_options = { :class => "form-control"}) %>
		</div>

		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field(:name, :class => "form-control") %>
		</div>
		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area(:description, :size => "40x10", :class => "form-control") %>
		</div>

		<div class="form-buttons">
			<%= f.submit("Save" , :class => 'btn btn-primary') %>
			<%= link_to("Cancel" , books_path, :class => 'btn btn-default') %>
		</div>

	<% end %>
</div>