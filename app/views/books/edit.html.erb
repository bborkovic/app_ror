<h2>Edit Book</h2>

	<%= form_for(@book, :class => "form") do |f|%>

		<div class="form-group">
			<%= f.label :publisher %>
			<%= f.select(:publisher_id, Publisher.all.map{ |publisher| [publisher.name, publisher.id] }, options = {:include_blank => "Select one"}, html_options = { :class => "form-control"}) %>
		</div>

		<div class="form-group">
			<%= f.label :author %>
			<%= f.select(:author_id, Author.all.map{ |author| [author.full_name, author.id] }, options = {:include_blank => "Select one"}, html_options = { :class => "form-control"}) %>
		</div>

		<div class="form-group">
			<%= f.text_field(:name, :class => "form-control") %>
		</div>
		<div class="form-group">
			<%= f.text_area(:description, :size => "40x10", :class => "form-control") %>
		</div>

		<div class="form-buttons">
			<%= f.submit("Save" , :class => 'btn btn-primary') %>
			<%= link_to("Cancel" , books_path, :class => 'btn btn-default') %>
		</div>
	<% end %>
