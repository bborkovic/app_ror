<h2>Edit Book</h2>

	<%= form_for(@book, :class => "form") do |f|%>

		<div class="form-group">
			<%= f.label :publisher %>
			<%= f.select(:publisher_id, Publisher.all.map{ |publisher| [publisher.name, publisher.id] }, options = {:include_blank => "Select one"}, html_options = { :class => "form-control"}) %>
		</div>



		<!-- skracena verzija sa collection_select -->
		<div class="form-group">
			<%= f.label "Author" %>
			<%= f.collection_select :author_id, Author.all, :id, :full_name, {:include_blank => true}, {class: "form-control"} %>
		</div>

		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field(:name, :class => "form-control") %>
		</div>

		<div class="form-group">
			<%= f.label :description %>
			<%= f.text_area(:description, :size => "40x10", :class => "form-control") %>
		</div>

		<div class="form-buttons">
			<%= f.submit("Save" , :class => 'btn btn-primary') %>
			<%= link_to("Cancel" , books_path, :class => 'btn btn-default') %>
		</div>
	<% end %>
